{
  "name": "arithmetic-calculator-api",
  "version": "1.0.0",
  "description": "Arithmetic Calculator REST API - TrueNorth coding challenge.",
  "engines": {
    "node": "^16.20.0"
  },
  "scripts": {
    "data:seed:dev": "NODE_ENV=dev ts-node ./src/infra/data/seed.ts",
    "data:seed:test": "NODE_ENV=test ts-node ./src/infra/data/seed.ts",
    "postinstall": "",
    "clean:build": "rm -rf ./.build",
    "clean:all": "rm -rf ./.build && rm -rf ./node_modules && rm package-lock.json",
    "clean:install": "rm -rf ./.build && rm -rf ./node_modules && npm install",
    "build": "npm run clean:build && tsc --build tsconfig.json",
    "postbuild": "cp serverless.yml .build",
    "start": "npm run local:start:docker",
    "local:start:dev": "npm run lint && NODE_ENV=dev serverless offline",
    "local:start:test": "NODE_ENV=test serverless offline",
    "local:start:docker": "rm -rf .build && NODE_ENV=docker serverless offline  --host 0.0.0.0  --useDocker",
    "docker:compose:all": "docker compose -f \"docker-compose.yml\" up -d --build",
    "docker:compose:daemon": "docker compose -f \"docker-compose-daemon-only.yml\" up -d --build",
    "docker:stop": "docker-compose stop",
    "docker:restart": "docker compose -f \"docker-compose.yml\" down && npm run docker:compose",
    "docker:clean": "docker system prune -a",
    "deploy": "cd .build && serverless deploy && cd ..",
    "build-deploy": "npm run build && npm run deploy",
    "pretest": "npm run lint",
    "test": "npm run test:ci",
    "test:dev": "NODE_ENV=dev npx jest --config=jest.config.test.js --detectOpenHandles --verbose --watch",
    "test:ci": "NODE_ENV=ci npx jest --config=jest.config.test.js --detectOpenHandles --verbose",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "redis": "^4.6.7",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/aws-lambda": "^8.10.51",
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-jest": "^29.0.3",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-module-resolver": "^1.5.0",
    "eslint-plugin-no-async-foreach": "^0.1.1",
    "jest": "^29.5.0",
    "serverless-bundle": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-node": "^10.9.1",
    "typescript": "4.4.4",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web2solutions/arithmetic-calculator-api.git"
  },
  "keywords": [
    "Nodejs",
    "TypeScript",
    "ServerLess",
    "MongoDB",
    "AWS Lambda"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/web2solutions/arithmetic-calculator-api/issues"
  },
  "homepage": "https://github.com/web2solutions/arithmetic-calculator-api#readme",
  "author": {
    "name": "Eduardo Almeida",
    "url": "https://github.com/web2solutions",
    "email": "web2solucoes@gmail.com"
  }
}
